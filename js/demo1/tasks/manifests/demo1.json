{
	"transport" : {
		"options": {
			"idleading": "demo1/<%= compile_dir %>/",
			"debug": true
		},
		"files": [{
			"expand": true,
			"cwd": "demo1/src",
			"src": "**/*",
			"filter": "isFile",
			"dest": "demo1/<%= temp_dir %>/"
		}]
	},
	"concat" : {
		"options": {
			"include": "relative"
		},
		"files": [{
			"expand": true,
			"cwd": "demo1/<%= temp_dir %>/",
			"src": ["demo1.js", "demo1-debug.js"],
			"dest": "demo1/<%= compile_dir %>/"
		}]
	},
	"jshint" : {
		"src" : ["demo1/<%= temp_dir %>/*.js", "demo1/<%= compile_dir %>/*.js"]
	},
	"uglify" : {
		"files": [{
			"expand": true,
			"cwd": "demo1/<%= compile_dir %>",
			"src": "**/demo1.js",
			"filter": "isFile",
			"dest": "demo1/<%= compile_dir %>/"
		}]
	},
	"copy" : {
		"files" : [
			{
				"src" : ["demo1/<%= compile_dir %>/demo1.js"],
				"dest" : "demo1/demo1.js"
			}
		]
	},
	"clean" : ["demo1/<%= temp_dir %>"]
}
