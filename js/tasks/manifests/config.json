{
	"transport" : {
		"options": {
			"alias": {
				"kg": "http://static.kgimg.com/common/js-lib/min/base-min",
					"phaser": "phaser/2.1.1/phaser"
			},
			"paths": ["../"],
			"debug": true
		},
		"demo1" : {
			"options": {
				"idleading": "<%= project_name %>/<%= compile_dir %>/"
			},
			"files": [{
				"expand": true,
				"cwd": "<%= project_name %>/src",
				"src": "**/*",
				"filter": "isFile",
				"dest": "<%= project_name %>/<%= temp_dir %>/"
			}]
		}
	},
	"concat" : {
		"demo1" : {
			"options": {
				"include": "relative"
			},
			"files": [{
				"expand": true,
				"cwd": "<%= project_name %>/<%= temp_dir %>/",
				"src": ["<%= project_name %>.js", "<%= project_name %>-debug.js"],
				"dest": "<%= project_name %>/<%= compile_dir %>/"
			}]
		}
	},
	"jshint" : {
		"src": [
			"**/src/*.js",
			"!node_modules/**/*",
			"!sealib/**/*",
			"!phaser/**/*"
		],
		"options": { 
			"jshintrc": "./tasks/.jshintrc" 
		},
		"demo1" : {
			"src" : ["<%= project_name %>/<%= temp_dir %>/*.js", "<%= project_name %>/<%= compile_dir %>/*.js"]
		}
	},
	"uglify" : {
		"demo1" : {
			"options": {
				"banner": "<%= banner %>"
			},
			"files": [{
				"expand": true,
				"cwd": "<%= project_name %>/<%= compile_dir %>",
				"src": "**/<%= project_name %>.js",
				"filter": "isFile",
				"dest": "<%= project_name %>/<%= compile_dir %>/"
			}]
		}
	},
	"copy" : {
		"demo1" : {}
	},
	"clean" : {
		"demo1" : ["<%= project_name %>/<%= temp_dir %>"]
	}
}
