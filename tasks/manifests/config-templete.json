{
	"transport" : {
		"options": {
			"include" : "relative",
			"alias": { },
			"debug": false
		},
		"sealib" : {
			"options":{
				"idleading": ""
			},
			"files" :[{
				"expand": true,
				"cwd": "js/",
				"src": "sealib/**/*",
				"filter": "isFile",
				"dest": "js/<%= temp_dir %>/"
			}]
		},
		"{projectName}" : {
			"options": {
				"idleading": "<%= project_name %>/<%= compile_dir %>/"
			},
			"files": [{
				"expand": true,
				"cwd": "js/<%= project_name %>/src",
				"src": "**/*",
				"filter": "isFile",
				"dest": "js/<%= temp_dir %>/<%= project_name %>/<%= compile_dir %>/"
			}]
		}
	},
	"concat" : {
		"{projectName}" : {
			"options": {
				"include": "relative"
			},
			"files": [{
				"expand": true,
				"cwd": "js/<%= temp_dir %>/",
				"src": "**/*.js",
				"dest": "js/<%= temp_dir %>/<%= concat_tmp_dir %>/"
			}]
		}
	},
	"jshint" : {
		"src": [
			"**/src/*.js",
			"!node_modules/**/*",
			"!sealib/**/*",
			"!phaser/**/*"
		],
		"options": { 
			"jshintrc": "./tasks/.jshintrc" 
		},
		"{projectName}" : {
			"src" : ["js/<%= temp_dir %>/**/*.js"]
		}
	},
	"uglify" : {
		"{projectName}" : {
			"options": {
				"banner": "<%= banner %>"
			},
			"files": [{
				"expand": true,
				"cwd": "js/<%= temp_dir %>/<%= concat_tmp_dir %>/<%= project_name %>/<%= compile_dir %>",
				"src": "**/<%= project_name %>.js",
				"filter": "isFile",
				"dest": "js/<%= project_name %>/<%= compile_dir %>/"
			}]
		}
	},
	"copy" : {
		"{projectName}" : {}
	},
	"clean" : {
		"{projectName}" : ["js/<%= temp_dir %>"]
	}
}
